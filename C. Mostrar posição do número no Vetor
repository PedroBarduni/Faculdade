#include <stdio.h>
#include <stdlib.h>


main(){

    int i=0, v[10], num, pos=0, naoencontrado=0;

    for(i=0; i<10; i++){
    printf("Forneca o vetor V[%d]: ", i);
    scanf("%d", &v[i]);
}

printf("\n=== Busca de numero ===\n");
printf("Informe o numero a ser buscado: ");
scanf("%d", &num);

printf("=========================");

for(i=0; i<10; pos++){
    if(v[i]==num){
        printf("\nO numero esta na posicao: %d", pos);
        naoencontrado++;
        i++;
    }
    else{
    i++;
    }

}
    if(naoencontrado==0){
        printf("\n Numero nao encontrado");
    }

printf("\n=========================");
}
