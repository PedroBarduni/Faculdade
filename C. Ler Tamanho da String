#include <stdlib.h>
#include <stdio.h>
#include <string.h>
int main()
  {
    char string[20];
    printf("\n");
    printf("Determinando o tamanho de uma string\n");
    printf("------------------------------------\n");
    printf("\n");
    printf("Digite a string :");
    scanf("%s",&string);
    printf("\n");
    printf("A string tem %d carateres.\n\n",strlen(string));
    system("pause");
    return(0);
  }
